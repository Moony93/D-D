import java.util.Scanner;

abstract class Barbarian extends Player
{
	
	void firstLevel()
	{
		this.setClas("Barbarian");
		this.setBaseHp(12);		
	}
	
	void levelUp()
	{
		System.out.println("Vuoi rollare per l'aumento di vita o scegli il valore standard 5?");
		System.out.println("1 - Roll");
		System.out.println("2 - Valore standard");
		
		boolean selection = true;
				
		while(selection)
		{
			Scanner input = new Scanner(System.in);
			switch(input.nextInt())
			{
				case 1:
					int roll = Dices.RollD12();
					int newlife;
					
					System.out.println("Roll della vita: " + roll);
					newlife = this.getHitPoints() + roll;
					System.out.println("Nuova vita = " + newlife);
					this.setHitPoints(newlife);
					selection = false;
					break;
					
				case 2:
					newlife = this.getHitPoints() + 5;
					System.out.println("Nuova vita = " + newlife);
					this.setHitPoints(newlife);
					selection = false;
					break;

					
			}
		}

		//rolla la nuova vita al level up, 1d12 + modificatore di costituzione per il barbaro
		int roll = Dices.RollD12();
		
		System.out.println("Roll della vita: " + roll);
		int newlife = this.getHitPoints() + roll;
		System.out.println("Nuova vita = " + newlife);

		this.setHitPoints(newlife);
	}
}
